<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <include
        layout="@layout/activity_menu"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- RecyclerView để hiển thị hội thoại -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />


    <!-- Các nút câu hỏi ở cuối màn hình -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi muốn hỏi địa chỉ mua hàng"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi muốn tham gia cộng đồng MSI trên Facebook"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ trung tâm bảo hành laptop"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_question4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ trung tâm bảo hành linh kiện"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>
